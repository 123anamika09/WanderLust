<script>
document.addEventListener('DOMContentLoaded', function() {
  const voiceSearchBtn = document.getElementById('voice-search-btn');
  const searchInput = document.getElementById('search-input');
  const voiceModal = new bootstrap.Modal(document.getElementById('voiceSearchModal'));
  const voiceStatus = document.getElementById('voice-status');
  const voiceResult = document.getElementById('voice-result');
  
  // Check if browser supports speech recognition
  const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
  
  if (SpeechRecognition) {
    const recognition = new SpeechRecognition();
    recognition.continuous = false;
    recognition.lang = 'en-US';
    recognition.interimResults = false;
    recognition.maxAlternatives = 1;
    
    voiceSearchBtn.addEventListener('click', function() {
      voiceResult.textContent = '';
      voiceStatus.textContent = 'Listening...';
      voiceModal.show();
      
      // Start speech recognition after a short delay
      setTimeout(() => {
        recognition.start();
      }, 500);
    });
    
    // Speech recognition results
    recognition.onresult = function(event) {
      const transcript = event.results[0][0].transcript;
      voiceResult.textContent = '"' + transcript + '"';
      voiceStatus.textContent = 'Got it! Searching...';
      
      // Update search input with transcript
      searchInput.value = transcript;
      
      // Close modal and submit form after a short delay
      setTimeout(() => {
        voiceModal.hide();
        searchInput.form.submit();
      }, 1500);
    };
    
    // Handle errors
    recognition.onerror = function(event) {
      voiceStatus.textContent = 'Error: ' + event.error;
      setTimeout(() => {
        voiceModal.hide();
      }, 1500);
    };
    
    // When recognition ends
    recognition.onend = function() {
      if (voiceStatus.textContent === 'Listening...') {
        voiceStatus.textContent = 'No speech detected. Please try again.';
        setTimeout(() => {
          voiceModal.hide();
        }, 1500);
      }
    };
  } else {
    // Browser doesn't support speech recognition
    voiceSearchBtn.addEventListener('click', function() {
      alert('Your browser does not support speech recognition. Please try using a modern browser like Chrome.');
    });
  }
});
</script>
