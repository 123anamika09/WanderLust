<%-layout("/layouts/boilerplate")%>
<div class="row">
  <div class="col-8 offset-2">
    <br /><br />
    <h3>Create a new List</h3>
    <br />
    <form method="POST" action="/listings">
      <div>
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Add A catchy Title"
          type="text"
          class="form-control"
        />
      </div>
      <div>
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control"></textarea>
      </div>

      <div>
        <label for="image" class="form-label">Image link</label>
        <input
          name="listing[image][url]"
          placeholder=" enter image URL/link"
          type="text"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            type="number"
            placeholder="1200"
            class="form-control"
          />
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
          />
        </div>
      </div>

      <div>
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="Muzaffarpur,Bihar"
          type="text"
          class="form-control"
        />
      </div>

      <!-- here we make key of an object listing[country]-->
      <!-- throught this the syntax becomes easy to export thse  in app.js in the create route-->
      <br /><br />

      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
