<% layout("/layouts/boilerplate")%>
<!-- use boilerplate for same page-->
<body>
  <h3>All Listings</h3>
  <!-- <form method="GET" action="/listings/new">
     here new.ejs file connected & get request-->
  <!-- <button>Create New Listing</button> -->
  <!-- here create route started where we get the form then submit the form & then it goes to POst : /Listings-->
