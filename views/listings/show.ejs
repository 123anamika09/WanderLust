<%-layout("/layouts/boilerplate")%>
  <div class="row">
    <div class="col-8 offset-2 mt-3">
    </div>
    <div class="card col-6 offset-3 show-card">
      <h3>Listing details</h3>
      
        <img src="<%=listing.image.url%>"  class="card-img-top  show-img" alt="listing_image">
        <div class="card-body">
         <b> <p class="card-text"><%=listing.title%></p></b><br>
         <%= listing.description %> <br>
         &#x20B9 <%=listing.price.toLocaleString("en-in")%> <br>
         <%=listing.location%>
         <%=listing.country%>
        </div>  
      </div>
     <div class="btns">
    <!-- make a route forrr this -->
    <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn"> Edit</a> <!-- here we do changes in listing by gettting it's id-->
    <br><br>
  
 
   <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
    <button class="btn btn-dark offset-5">Delete</button>
   </form>
  </div>
  </div>

</div>
  

